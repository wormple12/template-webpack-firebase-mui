{
    "presets": [
        [
            "@babel/preset-env",
            {
                "modules": false /* possibly required for tree shaking optimization */
            }
        ],
        "@babel/preset-typescript",
        "@babel/preset-react"
    ],
    "plugins": [
        "@babel/proposal-class-properties",
        "@babel/proposal-object-rest-spread",
        [
            "@babel/plugin-transform-modules-commonjs",
            {
                "loose": true
            }
        ]
    ]
}